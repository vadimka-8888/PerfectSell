<!DOCTYPE HTML>
<html>
<head>
  <title>Goods</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
  <%= stylesheet_link_tag 'main.css' %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body class="goods is-preload">
<section id="page-wrapper">
  <!-- Header -->
  <section id="header">
    <!-- Logo -->
    <h1><a href="/shops">Perfect Sell</a></h1>
    <!-- Nav -->
    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
    <div class="topnav" id="myTopnav">
      <a href="/shops" class="active">Магазины</a>
      <a href="/goods">Предложенные товары</a>
      <a href="/page_shop">Аккаунт</a>
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
      </a>
    </div>
    <!-- Main -->
    <section id="main">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <!-- Goods -->
            <section>
                <div id="form">
                  <h2>Добавление магазина</h2>
                  <%=form_for :shop, url:shops_path do |f| %>
                    <p>
                      Название<br>
                      <%= f.text_field :title %>
                    </p>
                    <p>
                      Почта<br>
                      <%= f.text_field :email %>
                    </p>
                    <p>
                      Информация о магазине<br>
                      <%= f.text_area :info %>
                    </p>
                    <p>
                      Тут будет штучка для загрузки фото<br>
                      <%= f.text_field :image %>
                    </p>
                    <p>
                      <%= submit_tag 'Добавить' %>
                    </p>
                    <a href="/shops" class="button2">Отмена</a>
                  <%end %>
                </div>
            </section>
          </div>
        </div>
      </div>
    </section>
  </section>
</section>
</body>
</html>