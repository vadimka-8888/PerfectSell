<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
  <%= stylesheet_link_tag 'main.css' %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body class="goods is-preload">
<section id="page-wrapper">
  <!-- Header -->
  <section id="header">
    <!-- Logo -->
    <h1><a href="/stores">Perfect Sell</a></h1>
    <!-- Nav -->
    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
    <div class="topnav" id="myTopnav">
      <a href="/stores" class="active">Магазины</a>
      <a href="/offers">Все товары</a>
      <a href="/account">Аккаунт</a>
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
      </a>
    </div>

    <section id="main">
      <div class="container2">

                  <div class="container">
                    <h1><%=@store.name %></h1>
                  <h2>Описание</h2>
                  <p class="major"><%=@store.description %></p>
                    <h2>Адрес</h2>
                    <p><%=@store.address %></p>
                  <h2>Контакты</h2>
                  <p><%=@store.store_email %></p>
                  </div>
        <div class="container">
          <div class="image">
              <img src="/assets/shop3.jpg" alt="" />
          </div>
        </div>
      </div>
    </section>
  </section>
</section>
</body>