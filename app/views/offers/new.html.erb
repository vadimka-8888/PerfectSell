<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
  <%= stylesheet_link_tag 'main.css' %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body class="goods is-preload">
<section id="page-wrapper">
  <!-- Header -->
  <section id="header">
    <!-- Logo -->
    <h1><a href="/shops">Perfect Sell</a></h1>
    <!-- Nav -->
    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
    <div class="topnav" id="myTopnav">
      <a href="/stores">Магазины</a>
      <a href="/offers" class="active">Все товары</a>
      <a href="/account">Аккаунт</a>
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
      </a>
    </div>
    <!-- Main -->
    <section id="main">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <!-- Goods -->
            <section>
              <div id="form">
                <h2>Добавление товара</h2>
                <%=form_for :offer, url:offers_path do |f| %>
                  <p>
                    Название<br>
                    <%= f.text_field :name %>
                  </p>
                  <p>
                    Единица измерения товара<br>
                    <%= f.text_field :measure %>
                  </p>
                  <p>
                    Стоимость за единицу<br>
                    <%= f.text_field :price %>
                  </p>
                  <p>
                    Описание<br>
                    <%= f.text_field :description %>
                  </p>
                  <p>
                    Доступен ли товар для продажи<br>
                    <%= f.check_box :is_active %><br />
                  </p>
                  <p>
                    Тут будет штучка для загрузки фото<br>
                    <%= f.text_field :photo %>
                  </p>
                  <p>
                    <%= submit_tag 'Добавить' %>
                  </p>
                  <a href="/stores" class="button2">Отмена</a>
                <%end %>
              </div>
            </section>
          </div>
        </div>
      </div>
    </section>
  </section>
</section>
</body>
