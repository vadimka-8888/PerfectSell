<!DOCTYPE HTML>
<html>
<head>
  <title>Goods</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
  <%= stylesheet_link_tag 'main.css' %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body class="goods is-preload">
<section id="page-wrapper">
  <!-- Header -->
  <section id="header">
    <!-- Logo -->
    <h1><a href="/stores">Perfect Sell</a></h1>
    <!-- Nav -->
    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
    <div class="topnav" id="myTopnav">
      <a href="/stores">Магазины</a>
      <a href="/offers"class="active">Предложенные товары</a>
      <a href="/account">Аккаунт</a>
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
      </a>
    </div>

    <!-- Main -->
    <section id="main">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <!-- Goods -->
            <section>
              <div class="container3">
                <div><h1><%=@offer.name %></h1></div>
              </div>
              <div id=container3>
                <div id="container3">
                  <h2>Данные о товаре</h2>
                  <p class="major"><%=@offer.description %></p>
                  <h2>Стоимость</h2>
                  <p><%=@offer.price %></p>
                  <%if session[:role]=="store" %>
                    <% unless current_user.bargains.find_by(offer: @offer).present? %>
                  <ul class="actions">
                          <li><a href="/offers/<%= @offer.id  %>/bargains/new" class="button">Взять товар на рассмотрение</a>
                          </li>
                  </ul>
                      <%else if current_user.bargains.find_by(offer: @offer).status="Considering"%>
                        <h2>Товар на рассмотрении</h2>
                        <ul class="actions">
                          <li><a href="offers/<%= @offer.id  %>/edit" class="button">Принять товар в магазин</a>
                          </li>
                        </ul>
                        <ul class="actions">

                          <%= button_to 'Удалить из рассмотрения', [@bargain.offer, @bargain],
                                      method: :delete,
                                      data: { confirm: 'Вы уверены?' } %>
                          </li>
                        </ul>
                        <%else %>
                        <h2>Товар принят!</h2>
                        <%end %>
                  <% end %>
                  <%elsif session[:role]=="proposer" %>
                    <%if @is_belongs %>
                      <ul class="actions">
                        <li><a href="#" class="button">Редактировать информацию</a></li>
                      </ul>
                    <%end %>

                  <%end %>
                </div>
                <div class="image">
                  <div id="img_shop">
                    <img src="/assets/shop3.jpg" alt="" />
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </section>
  </section>
</section>
</body>
</html>