<!DOCTYPE HTML>
<html>
<head>
  <title>Shops</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
  <%= stylesheet_link_tag 'main.css' %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body class="homepage is-preload">
<section id="page-wrapper">

  <!-- Header -->
  <section id="header">

    <!-- Logo -->
    <h1><a href="/stores">Perfect Sell</a></h1>
    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
    <div class="topnav" id="myTopnav">
      <a href="/stores">Магазины</a>
      <a href="/offers" class="active">Предложенные товары</a>
      <a href="/page_shop">Аккаунт</a>
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
      </a>
    </div>
    <!-- Main -->
    <section id="main">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <!-- Shops -->
            <section>
              <header class="major">
                <div class="container3">
                  <div><h2>Представленные товары</h2></div>
                  <a href="/offers/new" class="button">Добавить товар</a>
                </div>

              </header>
              <div class="row">
                <%- @all_offers.each do |offer| %>
                  <div class="col-4 col-6-medium col-12-small">

                    <section class="box">
                      <a href="#" class="image featured"><img src="/assets/shop3.jpg" alt="" /></a>
                      <header>
                        <h3><%=offer.name %></h3>
                      </header>
                      <h4>Информация</h4>
                      <p><%=offer.description %></p>
                      <footer>
                        <ul class="actions">
                          <li><a href="offers/<%=offer.id%>" class="button alt">Подробнее</a></li>
                        </ul>
                      </footer>
                    </section>
                  </div>
                <% end %>
              </div>
            </section>
          </div>
        </div>
      </div>
    </section>
  </section>
</section>
</body>
</html>